<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="csid.butterflyeffect.activity.MainActivity"
    android:gravity="center"
    >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    >
                    <FrameLayout
                        android:id="@+id/fr_preview"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:id="@+id/sv">
                                <!--
                                <csid.butterflyeffect.camera.PreviewSurface

                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent" />
                                -->
                                <ImageView
                                    android:id="@+id/image_view"
                                    android:scaleType="fitXY"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent" />
                                <csid.butterflyeffect.view.SkeletonView
                                    android:id="@+id/skeleton_view"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent" />


                            </FrameLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/material_teal"
                                android:layout_gravity="bottom"
                                android:orientation="vertical">
                                <TextView
                                    android:textSize="7dp"
                                    android:background="@color/blueGrey900"
                                    android:paddingLeft="3dp"
                                    android:textColor="@color/white"
                                    android:id="@+id/tv_angle"
                                    android:text="user angle view"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:singleLine="true"/>
                                <TextView
                                    android:textSize="7dp"
                                    android:paddingLeft="3dp"
                                    android:textColor="@color/white"
                                    android:id="@+id/tv_tcp"
                                    android:text="tcp datas come here"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:singleLine="true"/>

                            </LinearLayout>
                        </LinearLayout>

                        <Button
                            android:text="focus"
                            android:layout_gravity="right"
                            android:id="@+id/btn_capture"
                            android:textSize="7dp"
                            android:layout_width="50dp"
                            android:layout_height="30dp" />
                    </FrameLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


